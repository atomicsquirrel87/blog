<h2 class="center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :email, class:"standard-color"  %>
        <%= f.email_field :email, class: "form-control", placeholder: "Enter Email...", required: true, autofocus: true, autocomplete: "email", pattern: '[^@]+@[^@]+\.[a-zA-Z]{2,6}' %>
      </div><!-- end form-group -->
      <div class="form-group">
        <%= f.label :first_name, class:"standard-color"  %>
        <%= f.text_field :first_name, id: :user_first_name, class: "form-control", placeholder: "Enter First Name...", required: true %>
      </div><!-- end form-group -->
      <div class="form-group">
        <%= f.label :last_name, class:"standard-color"  %>
        <%= f.text_field :last_name, id: :user_last_name, class: "form-control", placeholder: "Enter Last Name...", required: true %>
      </div><!-- end form-group -->
      <div class="form-group">
        <%= f.label "Username", class:"standard-color"  %>
        <%= f.text_field :alias_name, id: :user_alias_name, class: "form-control", placeholder: "Enter Username...", required: true %>
      </div><!-- end form-group -->
      <div class="form-group">
        <%= f.label :password, class:"standard-color"  %>
        <% if @minimum_password_length %>
          <em class="standard-color">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, class: "form-control", placeholder: "Enter Password...", required: true, autocomplete: "off" %>
      </div><!-- end form-group -->
      <div class="form-group">
        <%= f.label :password_confirmation, class:"standard-color"  %>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Repeat Password...", required: true, autocomplete: "off" %>
      </div><!-- end form-group -->
      <div class="form-group">
        <%= f.submit "Sign up", class:"btn btn-default" %>
      </div><!-- end form-group -->
      <%= render "devise/shared/links" %>
    </div><!-- end col-md-4 -->
  </div><!-- end row -->
<% end %>
