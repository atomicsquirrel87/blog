<h2 class="center">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :email, class:"standard-color" %>
        <%= f.email_field :email, class:"form-control", autofocus: true, placeholder: "Enter Email...", required: true, autocomplete: "email", pattern: '[^@]+@[^@]+\.[a-zA-Z]{2,6}' %>
      </div><!-- end form-group -->
      <div class="form-group">
        <%= f.label :password, class:"standard-color" %>
        <%= f.password_field :password, class:"form-control", autocomplete: "off", placeholder: "Enter Password...", required: true %>
      </div><!-- end form-group -->
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class:"standard-color" %>
      </div><!-- end form-group -->
      <div class="form-group">
        <%= f.submit "Log in", class:"btn btn-default" %>
      </div><!-- end form-group -->
      <%= render "devise/shared/links" %>
    </div><!-- end col-md-4 -->
  </div><!-- end row -->
<% end %>
